<Window x:Class="PaddleOCRUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaddleOCRUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        ThemeMode="System"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}">
    <Grid>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0"
                  Grid.Row="0"
                  Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Content="Capture"
                        Command="{Binding CaptureCommand}"/>

                <ListBox Grid.Row="1"
                         Margin="0 10 0 0"
                         ItemsSource="{Binding ImageFilenames}"
                         SelectedItem="{Binding SelectedImageFilename}"/>
            </Grid>

            <Image Grid.Column="1"
                   Grid.Row="0"
                   Margin="10 0 0 0"
                   Source="{Binding Image, Converter={StaticResource image_to_bitmap_converter}}"/>

            <Image Grid.Column="2"
                   Grid.Row="0"
                   Margin="10 0 0 0"
                   Source="{Binding ProcessedImage, Converter={StaticResource image_to_bitmap_converter}}"/>

            <TextBox Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Grid.Row="1"
                     Margin="10 10 0 0"
                     Height="75"
                     FontFamily="Courier New"
                     Text="{Binding Log}"/>
        </Grid>

        <ContentControl Visibility="{Binding IsBusy, Converter={StaticResource bool_to_visibility_converter}}">
            <Grid>
                <Rectangle Fill="AliceBlue"
                           Opacity="0.8"/>
                <StackPanel Margin="100 0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding Message}"/>
                    <ProgressBar IsEnabled="True" 
                                 IsIndeterminate="True" 
                                 Height="25"
                                 Margin="0 20 0 0"/>
                </StackPanel>
            </Grid>
        </ContentControl>
    </Grid>
</Window>
