<Window x:Class="ImageImporterUI.Views.CaptureImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:ImageImporterUI.ViewModels"         
        Title="CaptureImageWindow"
        WindowStartupLocation="CenterOwner"
        Height="450" 
        Width="800"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=vm:CaptureImageViewModel}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Row="0"
                  Grid.ColumnSpan="2"
                  ItemsSource="{Binding Cameras}"
                  SelectedItem="{Binding SelectedCamera}"/>
        
        <Image Grid.Row="1"
               Grid.Column="0"
               Margin="0 10 0 0"
               Source="{Binding BitmapSource}"/>
    </Grid>
</Window>
