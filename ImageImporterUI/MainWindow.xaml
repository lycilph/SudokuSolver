<Window x:Class="ImageImporterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageImporterUI" 
        xmlns:mvvm="clr-namespace:ImageImporterUI.MVVM" 
        Title="MainWindow" Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=mvvm:MainViewModel}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="bool_to_visibility_converter"/>
        <local:ImageToBitmapConverter x:Key="image_to_bitmap_converter"/>
        <local:BoolToBorderConverter x:Key="bool_to_border_converter"/>
        <local:BoolToOpacityConverter x:Key="bool_to_opacity_converter"/>
    </Window.Resources>
    
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0"
                    Grid.Row="0"
                    Content="Import"
                    Margin="10"
                    Padding="10"
                    Command="{Binding ImportCommand}"/>

            <ListBox Grid.Column="0"
                     Grid.Row="1"
                     Margin="10 0 10 10"
                     Padding="10 0"
                     ItemsSource="{Binding ImageFilenames}"
                     SelectedItem="{Binding SelectedImageFilename}"/>

            <TabControl Grid.Column="1"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Margin="0 10 10 10">
                <TabItem Header="Log">
                    <TextBox IsReadOnly="True" 
                             Text="{Binding Log}"
                             FontFamily="Courier New"
                             VerticalScrollBarVisibility="Auto"
                             local:TextBoxUtils.ScrollToEnd="True"/>
                </TabItem>
                <TabItem Header="Grid">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                       
                        <Image Source="{Binding InputImage, Converter={StaticResource image_to_bitmap_converter}}" Grid.Column="0"/>
                        <Image Source="{Binding GridImage, Converter={StaticResource image_to_bitmap_converter}}" Grid.Column="1"/>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Cells">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding GridImage, Converter={StaticResource image_to_bitmap_converter}}" Grid.Column="0"/>
                        <Image Source="{Binding CellsImage, Converter={StaticResource image_to_bitmap_converter}}" Grid.Column="1"/>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Digits">
                    <ItemsControl ItemsSource="{Binding Digits}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="9" Rows="9"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Red"
                                        BorderThickness="{Binding RecognitionFailure, Converter={StaticResource bool_to_border_converter}}"
                                        Padding="3">
                                    <Grid HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                        Opacity="{Binding ContainsNumber, Converter={StaticResource bool_to_opacity_converter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Column="0" Source="{Binding Cell.Image, Converter={StaticResource image_to_bitmap_converter}}" Width="30" Height="30"/>
                                        <Image Grid.Column="1" Source="{Binding ImageProcessed, Converter={StaticResource image_to_bitmap_converter}}" Width="30" Height="30"/>

                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                                            <TextBlock Text="{Binding Cell.Id, StringFormat=Id: {0}}"/>
                                            <TextBlock Text="{Binding Text, StringFormat=Match: {0}}"/>
                                            <TextBlock Text="{Binding Confidence, StringFormat=Confidence: {0:f2}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </TabItem>
                
                <TabItem Header="Digit">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <ListBox Grid.Column="0"
                                 Margin="5 0"
                                 ItemsSource="{Binding DigitsWithNumbers}"
                                 SelectedItem="{Binding SelectedDigit}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Red"
                                            BorderThickness="{Binding RecognitionFailure, Converter={StaticResource bool_to_border_converter}}"
                                            Padding="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Column="0" Source="{Binding Cell.Image, Converter={StaticResource image_to_bitmap_converter}}" Width="30" Height="30"/>
                                            <Image Grid.Column="1" Source="{Binding ImageProcessed, Converter={StaticResource image_to_bitmap_converter}}" Width="30" Height="30"/>

                                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                                                <TextBlock Text="{Binding Cell.Id, StringFormat=Id: {0}}"/>
                                                <TextBlock Text="{Binding Text, StringFormat=Match: {0}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListBox>

                        <Image Grid.Column="1" Source="{Binding DigitCopy.ImageProcessed, Converter={StaticResource image_to_bitmap_converter}}"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <ContentControl Visibility="{Binding IsBusy, Converter={StaticResource bool_to_visibility_converter}}">
            <Grid>
                <Rectangle Fill="AliceBlue"
                           Opacity="0.8"/>
                <ProgressBar IsEnabled="True" 
                             IsIndeterminate="True" 
                             Height="25"
                             Margin="100 0"/>
            </Grid>
        </ContentControl>
    </Grid>
</Window>
