<Window x:Class="SudokuUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuUI"
        xmlns:vm="clr-namespace:SudokuUI.ViewModels"
        mc:Ignorable="d"
        Title="Sudoku UI" Height="700" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" 
                    Orientation="Vertical"
                    Margin="5">
            <Button ToolTip="Clear">
                <Image Source="/Assets/settings.png"/>
            </Button>

            <Button Margin="0,15,0,0"
                    ToolTip="Clear">
                <Image Source="/Assets/circle-x.png"/>
            </Button>

            <Button Margin="0,5,0,0"
                    ToolTip="Reset">
                <Image Source="/Assets/rotate-ccw.png"/>
            </Button>

            <Button Margin="0,5,0,0"
                    ToolTip="Import">
                <Image Source="/Assets/import.png"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Orientation="Vertical">
            <ContentControl Content="{Binding Grid}"/>
            <ContentControl Content="{Binding Selections}"/>
        </StackPanel>

        <StackPanel Grid.Column="2"
                    Orientation="Vertical"
                    Margin="5">
            <Button ToolTip="Hint">
                <Image Source="/Assets/lightbulb.png"/>
            </Button>

            <Button Margin="0,5,0,0"
                    ToolTip="Solve the puzzle">
                <Image Source="/Assets/flag.png"/>
            </Button>

            <Button Margin="0,5,0,0"
                    ToolTip="Count # of solutions">
                <Image Source="/Assets/hash.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
