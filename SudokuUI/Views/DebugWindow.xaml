<mah:MetroWindow x:Class="SudokuUI.Views.DebugWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
                 xmlns:vm="clr-namespace:SudokuUI.ViewModels"
                 mc:Ignorable="d"
                 Title="Debug" 
                 Height="650" 
                 Width="350"
                 ResizeMode="NoResize"
                 d:DataContext="{d:DesignInstance Type=vm:DebugViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock Grid.Row="0"
                   Text="Undo stack"/>
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding UndoStack}"
                 DisplayMemberPath="Name"
                 SelectedItem="{Binding Selected}"/>

        <TextBlock Grid.Row="2"
                   Text="Redo stack"/>
        <ListBox Grid.Row="3"
                 ItemsSource="{Binding RedoStack}"
                 DisplayMemberPath="Name"
                 SelectedItem="{Binding Selected}"/>
        
        <TextBlock Grid.Row="4"
                   Text="Command description"/>
        <TextBox Grid.Row="5"
                 IsReadOnly="True"
                 Text="{Binding Selected.Description, Mode=OneWay}"
                 TextWrapping="Wrap"/>

        <TextBlock Grid.Row="6"
                   Text="Strategies"/>
        <ItemsControl Grid.Row="7"
                      ItemsSource="{Binding Strategies}"
                      Grid.IsSharedSizeScope="True"/>
        <StackPanel Grid.Row="8"
                    Orientation="Horizontal">
            <Button Content="Toggle"
                    Command="{Binding ToggleCommand}"/>
            <Button Content="Next"
                    IsEnabled="False"
                    Margin="10 0 0 0"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
