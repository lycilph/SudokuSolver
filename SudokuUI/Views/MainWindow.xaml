<mah:MetroWindow x:Class="SudokuUI.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
                 xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                 xmlns:vm="clr-namespace:SudokuUI.ViewModels" 
                 mc:Ignorable="d"
                 Title="Sudoku" 
                 Height="700" 
                 WindowStartupLocation="CenterScreen"
                 SizeToContent="WidthAndHeight"
                 ResizeMode="CanMinimize"
                 dialog:DialogParticipation.Register="{Binding}"
                 d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <!-- Root grid to allow the different overlays (flyout, new game, hint and victory) -->
    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side buttons -->
                <StackPanel Grid.Column="0" 
                            Orientation="Vertical">
                    <Button Content="{icon:Lucide Kind=SquarePlus, Height=24, Width=24}"
                            IsEnabled="False"
                            ToolTip="New"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=SquareX, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 5 0 0"
                            ToolTip="Clear"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=ArrowDownToLine, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 20 0 0"
                            ToolTip="Import"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=ArrowUpFromLine, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 5 0 0"
                            ToolTip="Export"
                            Focusable="False"/>
                </StackPanel>

                <ContentControl Grid.Column="1"
                                Content="{Binding GridVM}"
                                Margin="5 0"/>

                <!-- Right side buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Vertical">
                    <Button Content="{icon:Lucide Kind=Lightbulb, Height=24, Width=24}"
                            IsEnabled="False"
                            ToolTip="Hint"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=Flag, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 5 0 0"
                            ToolTip="Solve the puzzle"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=Hash, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 5 0 0"
                            ToolTip="Count # of solutions"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=Grid2x2, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 20 0 0"
                            ToolTip="Fill in all candidates"
                            Focusable="False"/>

                    <Button Content="{icon:Lucide Kind=Grid2x2X, Height=24, Width=24}"
                            IsEnabled="False"
                            Margin="0 5 0 0"
                            ToolTip="Delete all candidates"
                            Focusable="False"/>
                </StackPanel>
            </Grid>

            <!-- Digit and input mode selection -->
            <Border Grid.Column="1"
                    Margin="0 5 0 0"
                    Width="300"
                    Height="50"
                    Background="LightGray">
                <TextBlock Text="Digit and input mode selection"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
