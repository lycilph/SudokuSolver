<UserControl x:Class="SudokuUI.Dialogs.ImageImport.CaptureImageImportDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dia="clr-namespace:SudokuUI.Dialogs.ImageImport"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=dia:CaptureImageImportDialogViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  ItemsSource="{Binding Cameras}"
                  SelectedItem="{Binding SelectedCamera}"
                  HorizontalAlignment="Left"
                  Padding="10 0"/>

        <Image Grid.Row="1"
               Grid.Column="0"
               Height="250"
               Margin="20 10"
               Source="{Binding CameraImage, Converter={StaticResource image_to_bitmap_converter}}"/>
        
        <Image Grid.Row="1"
               Grid.Column="1"
               Height="200"
               Margin="20 10"
               VerticalAlignment="Top"
               Source="{Binding ImportImage, Converter={StaticResource image_to_bitmap_converter}}"/>

        <Button Grid.Row="2"
                Grid.Column="0"
                Content="Capture"
                Command="{Binding CaptureCommand}"
                HorizontalAlignment="Center"
                MinWidth="60"
                Margin="8"/>

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Next"
                    Command="{Binding NextCommand}"
                    IsDefault="True"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                    MinWidth="80"
                    Margin="8"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs}"
                    MinWidth="80"
                    Margin="8"/>
        </StackPanel>
    </Grid>
</UserControl>
