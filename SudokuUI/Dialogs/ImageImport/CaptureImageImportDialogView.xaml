<UserControl x:Class="SudokuUI.Dialogs.ImageImport.CaptureImageImportDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dia="clr-namespace:SudokuUI.Dialogs.ImageImport"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=dia:CaptureImageImportDialogViewModel, IsDesignTimeCreatable=False}">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 25 0 10">
            <Button Content="{icon:Lucide Kind=CameraOff, Height=72, Width=72}"
                    Command="{Binding NextCommand}"
                    ToolTip="Import an image"
                    Margin="10 0"/>

            <Button Content="{icon:Lucide Kind=SwitchCamera, Height=72, Width=72}"
                    Command="{Binding NextCommand}"
                    ToolTip="Capture an image from a webcam"
                    Margin="10 0"/>
        </StackPanel>

        <Button HorizontalAlignment="Right"
                Content="Cancel"
                Command="{Binding CancelCommand}"
                IsCancel="True"
                Style="{DynamicResource MahApps.Styles.Button.Dialogs}"
                MinWidth="80"
                Margin="8"/>
    </StackPanel>
</UserControl>
