<UserControl x:Class="SudokuUI.Dialogs.ImageImport.SelectImageImportDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dia="clr-namespace:SudokuUI.Dialogs.ImageImport"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=dia:SelectImageImportDialogViewModel, IsDesignTimeCreatable=False}">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Filename}"
                   Margin="0 10"/>
       
        <Image Source="{Binding Image, Converter={StaticResource image_to_bitmap_converter}}"
                Height="250"
                Margin="20 0"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">
            <Button Content="Next"
                    Command="{Binding NextCommand}"
                    IsDefault="True"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                    MinWidth="80"
                    Margin="8"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs}"
                    MinWidth="80"
                    Margin="8"/>
        </StackPanel>
    </StackPanel>
</UserControl>
